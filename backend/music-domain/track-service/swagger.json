{
  "swagger": "2.0",
  "info": {
    "title": "Track Service API",
    "version": "1.0.0",
    "description": "Microservicio para gesti√≥n de pistas de audio"
  },
  "host": "localhost:3010",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/tracks": {
      "get": {
        "summary": "Obtener todas las pistas",
        "responses": {
          "200": {
            "description": "Lista de pistas"
          }
        }
      },
      "post": {
        "summary": "Crear una nueva pista",
        "parameters": [
          {
            "in": "body",
            "name": "track",
            "description": "Datos de la pista",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "artist": { "type": "string" },
                "duration": { "type": "number" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Pista creada"
          }
        }
      }
    }
  }
}
